{
  "name": "@less/root",
  "private": true,
  "version": "4.2.2",
  "description": "Less monorepo",
  "homepage": "http://lesscss.org",
  "scripts": {
    "publish": "lerna publish from-package --no-private",
    "changelog": "github-changes -o less -r less.js -a --only-pulls --use-commit-body -m \"(YYYY-MM-DD)\"",
    "test": "cd packages/less && npm test",
    "test:js-unit": "vitest --config test/js/vitest.config.ts",
    "test:go": "go run scripts/test.go integration",
    "test:go:unit": "go run scripts/test.go unit",
    "test:go:all": "bash scripts/test-all.sh",
    "test:go:full": "go run scripts/test.go integration",
    "test:go:summary": "go run scripts/test_enhanced.go summary",
    "test:go:debug": "go run scripts/test_enhanced.go integration --debug",
    "test:go:debug:trace": "go run scripts/test_enhanced.go integration --debug --trace",
    "test:go:debug:diff": "LESS_GO_DEBUG=1 LESS_GO_DIFF=1 go run scripts/test_enhanced.go integration",
    "test:go:filter": "go run scripts/test_enhanced.go integration",
    "bench:go": "go test -bench='^BenchmarkLessCompilation$' -benchmem -benchtime=10s ./less",
    "bench:go:cold": "go test -bench=BenchmarkLessCompilationColdStart -benchmem -benchtime=10s ./less",
    "bench:go:parse": "go test -bench=BenchmarkLessParsing -benchmem -benchtime=10s ./less",
    "bench:go:eval": "go test -bench=BenchmarkLessEvaluation -benchmem -benchtime=10s ./less",
    "bench:go:suite": "go test -bench=BenchmarkLargeSuite -benchmem -benchtime=30x ./less",
    "bench:js": "node packages/less/benchmark/suite.js",
    "bench:js:detailed": "node packages/less/benchmark/suite.js --detailed",
    "bench:js:json": "node packages/less/benchmark/suite.js --json",
    "bench:js:suite": "node packages/less/benchmark/suite.js --suite",
    "bench:compare": "node scripts/bench-compare.js",
    "bench:compare:suite": "node scripts/bench-compare-suite.js",
    "bench:profile": "bash scripts/profile-benchmark.sh",
    "bench:find-regex": "bash scripts/find-regex-hotspots.sh",
    "postinstall": "npx only-allow pnpm"
  },
  "author": "Alexis Sellier <self@cloudhead.net>",
  "contributors": [
    "The Core Less Team"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/less/less.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/less/less.js.git"
  },
  "devDependencies": {
    "all-contributors-cli": "~6.26.1",
    "github-changes": "^1.1.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "vitest": "^3.0.9"
  }
}
